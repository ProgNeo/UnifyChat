<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <import type="android.view.View" />
        <variable
            name="viewmodel"
            type="com.progcorp.unitedmessengers.ui.conversation.ConversationViewModel" />
        <variable
            name="message"
            type="com.progcorp.unitedmessengers.data.model.Message" />
    </data>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/dateText"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_20sdp"
            android:gravity="center"
            android:textSize="12sp"
            app:bind_epochTimeMsToDate="@{message.date}"
            app:bind_message="@{message}"
            app:bind_message_viewModel="@{viewmodel}"
            tools:text="30 april" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_message_left"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_4sdp"
            android:layout_marginBottom="@dimen/_3sdp"
            android:orientation="horizontal">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/photo_sender"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_marginStart="@dimen/_10sdp"
                app:layout_constraintBottom_toBottomOf="@+id/linear_layout_message_left"
                app:layout_constraintLeft_toLeftOf="parent"
                app:shapeAppearanceOverlay="@style/circleImageView"
                app:bind_image_url="@{message.senderPhoto}"
                tools:src="@drawable/ic_baseline_account_circle_24"/>

            <LinearLayout
                android:id="@+id/linear_layout_message_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/left_node_bg"
                android:layout_marginStart="@dimen/_3sdp"
                android:paddingTop="@dimen/_5sdp"
                android:paddingBottom="@dimen/_5sdp"
                app:layout_constraintLeft_toRightOf="@id/photo_sender"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/text_sender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/textview_name_left"
                    android:text="@{message.senderName}"
                    tools:text="Имя Фамилия"/>

                <TextView
                    android:id="@+id/text_message_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/textview_dialog_message_left"
                    android:paddingBottom="0dp"
                    app:bind_textview_visibility="@{message.text}"
                    android:text="@{message.text}"
                    android:textColorLink="@color/royal_blue"
                    android:autoLink="web"
                    tools:text="Сообщение с чатика"/>

                <TextView
                    android:id="@+id/text_attachment_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/textview_attachments"
                    android:paddingTop="1dp"
                    android:text="@{message.attachments}"
                    tools:text="Вложение"/>

            </LinearLayout>

            <TextView
                android:id="@+id/text_time_left"
                style="@style/info_text_views"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="@+id/linear_layout_message_left"
                app:layout_constraintStart_toEndOf="@+id/linear_layout_message_left"
                android:layout_marginBottom="@dimen/_2sdp"
                android:layout_marginStart="@dimen/_3sdp"
                android:text="@{message.time}"
                tools:text="11:46"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
</layout>