<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:foreground="?android:attr/selectableItemBackground">
    <data>
        <variable
            name="message"
            type="com.progcorp.unitedmessengers.data.model.Message" />
        <variable
            name="viewmodel"
            type="com.progcorp.unitedmessengers.ui.conversation.ConversationViewModel" />
    </data>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/dateText"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_20sdp"
            android:gravity="center"
            android:textSize="12sp"
            app:bind_epochTimeMsToDate="@{message.date}"
            app:bind_message="@{message}"
            app:bind_message_viewModel="@{viewmodel}"
            tools:text="30 april" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_message_left"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/_4sdp"
            android:layout_marginBottom="@dimen/_3sdp">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/photo_sender"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_marginStart="@dimen/_10sdp"
                app:layout_constraintBottom_toBottomOf="@+id/photo_sticker_left"
                app:layout_constraintLeft_toLeftOf="parent"
                app:shapeAppearanceOverlay="@style/circleImageView"
                app:bind_image_url="@{message.senderPhoto}"
                tools:src="@drawable/ic_baseline_account_circle_24" />

            <TextView
                android:id="@+id/text_time_left"
                style="@style/info_text_views"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/photo_sticker_left"
                android:layout_marginBottom="@dimen/_2sdp"
                android:layout_marginStart="@dimen/_3sdp"
                android:text="@{message.time}"
                tools:text="11:50"/>

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/photo_sticker_left"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_100sdp"
                android:layout_marginStart="@dimen/_3sdp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/photo_sender"
                app:bind_image_url="@{message.sticker}"
                tools:src="@drawable/sticker"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>
</layout>