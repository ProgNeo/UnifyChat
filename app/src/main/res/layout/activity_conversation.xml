<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View"/>
        <variable
            name="viewmodel"
            type="com.progcorp.unitedmessengers.ui.conversation.ConversationViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:navigationIcon="@drawable/ic_arrow_back"
                app:navigationIconTint="?attr/colorPrimary">

                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="?attr/actionBarSize"
                    android:layout_height="?attr/actionBarSize"
                    android:padding="12dp"
                    android:src="@drawable/ic_account_circle"
                    app:bind_conversation="@{viewmodel.chat}"
                    app:shapeAppearanceOverlay="@style/CircleImageView"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center_vertical">
                    <TextView
                        android:id="@+id/dialog_name"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        style="@style/Widget.UM.TextView.Conversation.Name"
                        app:bind_name="@{viewmodel.chat.companion}"
                        tools:text="Беседа" />

                    <TextView
                        android:id="@+id/extra_info"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        style="@style/Widget.UM.TextView.Conversation.Extra"
                        app:bind_extra_info="@{viewmodel.chat.companion}"
                        tools:text="10 участников" />
                </LinearLayout>

            </com.google.android.material.appbar.MaterialToolbar>

        </com.google.android.material.appbar.AppBarLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_gravity="top"
            app:bind_messages_list="@{viewmodel.messagesList}"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:itemAnimator="@{null}"
            app:reverseLayout="true"
            tools:listitem="@layout/list_item_message_sticker" />
        <LinearLayout
            android:id="@+id/user_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:visibility="@{viewmodel.chat.canWrite ? View.VISIBLE : View.GONE}"
            app:layout_constraintBottom_toBottomOf="parent">
            <Button
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:backgroundTint="?attr/colorPrimary"
                android:background="@drawable/inset_attach_file" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/edittext_chat_message"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:inputType="textMultiLine"
                app:hintEnabled="false">
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:background="@drawable/rounded_edittext"
                    android:hint="@string/enter_message_hint"
                    android:textAppearance="?attr/textAppearanceBodyMedium"
                    android:paddingHorizontal="14dp"
                    android:paddingVertical="10dp"
                    android:textColor="?attr/colorOnSecondaryContainer"
                    android:text="@={viewmodel.newMessageText}"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.button.MaterialButton
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/inset_send"
                android:onClick="@{() -> viewmodel.sendMessagePressed()}"
                app:backgroundTint="?attr/colorPrimary" />
        </LinearLayout>
    </LinearLayout>
</layout>