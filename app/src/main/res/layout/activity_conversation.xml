<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View"/>
        <variable
            name="viewmodel"
            type="com.progcorp.unitedmessengers.ui.conversation.ConversationViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:navigationIcon="@drawable/ic_baseline_arrow_back_24"
                app:navigationIconTint="@color/material_dynamic_primary40">

                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="?attr/actionBarSize"
                    android:layout_height="?attr/actionBarSize"
                    android:padding="12dp"
                    android:src="@drawable/ic_baseline_account_circle_24"
                    app:bind_conversation="@{viewmodel.chat}"
                    app:bind_image_url="@{viewmodel.chat.photo}"
                    app:shapeAppearanceOverlay="@style/circleImageView"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center_vertical">
                    <TextView
                        android:id="@+id/dialog_name"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        style="@style/textview_conversation_name"
                        app:bind_name="@{viewmodel.chat.companion}"
                        tools:text="Беседа" />

                    <TextView
                        android:id="@+id/extra_info"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        style="@style/textview_conversation_extra"
                        app:bind_extra_info="@{viewmodel.chat.companion}"
                        tools:text="10 участников" />
                </LinearLayout>

            </com.google.android.material.appbar.MaterialToolbar>

        </com.google.android.material.appbar.AppBarLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_gravity="top"
            app:bind_messages_list="@{viewmodel.messagesList}"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:itemAnimator="@{null}"
            app:reverseLayout="true"
            tools:listitem="@layout/list_item_message_sticker" />
        <LinearLayout
            android:id="@+id/user_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:visibility="@{viewmodel.chat.canWrite ? View.VISIBLE : View.GONE}"
            app:layout_constraintBottom_toBottomOf="parent">
            <Button
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:backgroundTint="@color/material_dynamic_primary40"
                android:background="@drawable/inset_attach_file" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edittext_chat_message"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/rounded_edittext"
                android:hint="@string/enter_message_hint"
                android:importantForAutofill="no"
                android:layout_marginVertical="10dp"
                android:paddingHorizontal="14dp"
                android:paddingVertical="10dp"
                android:text="@={viewmodel.newMessageText}"
                android:textColor="@color/material_dynamic_secondary10"
                android:textSize="14sp"
                android:inputType="textMultiLine"
                android:textColorHint="@color/material_dynamic_tertiary10"/>

            <com.google.android.material.button.MaterialButton
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/inset_send"
                android:onClick="@{() -> viewmodel.sendMessagePressed()}"
                app:backgroundTint="@color/material_dynamic_primary40" />
        </LinearLayout>
    </LinearLayout>
</layout>