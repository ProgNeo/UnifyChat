<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="WhiteActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="background">@color/white</item>
    </style>

    <style name="ToolbarStyle" parent="@style/Widget.AppCompat.Toolbar">
        <item name="contentInsetStart">0dp</item>
        <item name="android:contentInsetStart">0dp</item>
    </style>

    <style name="CornerImageView" parent="">
        <item name="cornerSize">14dp</item>
    </style>
    <style name="CornerImageViewPercent" parent="">
        <item name="cornerSize">8%</item>
    </style>
    <style name="CircleImageView" parent="">
        <item name="cornerSize">50%</item>
    </style>

    <!-- TextViews. -->
    <style name="Widget.UM.TextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">?attr/colorOnSurfaceVariant</item>
        <item name="android:textAppearance">?attr/textAppearanceBodyMedium</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:autoLink">web</item>
        <item name="android:linksClickable">false</item>
        <item name="android:textColorLink">?attr/colorPrimary</item>
    </style>

    <style name="Widget.UM.TextView.Reply">
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:layout_marginHorizontal">6dp</item>
    </style>

    <!-- Message layouts. -->
    <style name="Widget.UM.Layout.Message" parent="">
        <item name="android:titleMarginStart">6dp</item>
        <item name="android:layout_marginVertical">3dp</item>
        <item name="android:layout_marginHorizontal">8dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">bottom</item>
    </style>

    <style name="Widget.UM.Layout.Message.Block">
        <item name="android:paddingVertical">8dp</item>
        <item name="android:background">@drawable/message_bg</item>
        <item name="android:backgroundTint">?attr/colorSurfaceVariant</item>
        <item name="android:layout_marginStart">5dp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="Widget.UM.Layout.Message.Replied" parent="">
        <item name="android:layout_marginHorizontal">12dp</item>
        <item name="android:layout_marginVertical">2dp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="Widget.UM.Layout.Message.Reply" parent="">
        <item name="android:layout_marginHorizontal">12dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="Widget.UM.Layout.Message.Block.Out" parent="Widget.UM.Layout.Message.Block">
        <item name="android:backgroundTint">?attr/colorPrimaryContainer</item>
    </style>

    <!-- Message TextViews. -->
    <style name="Widget.UM.TextView.Message.Text" parent="Widget.UM.TextView">
        <item name="android:layout_marginHorizontal">12dp</item>
        <item name="android:maxWidth">@dimen/_180sdp</item>
    </style>

    <style name="Widget.UM.TextView.Message.Author" parent="Widget.UM.TextView.Message.Text">
        <item name="android:textColor">?attr/colorTertiary</item>
        <item name="android:textAppearance">?attr/textAppearanceBodySmall</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Widget.UM.TextView.Message.Text.Reply" parent="Widget.UM.TextView.Message.Text">
        <item name="android:layout_marginStart">6dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="Widget.UM.TextView.Message.Author.Reply" parent="Widget.UM.TextView.Message.Author">
        <item name="android:layout_marginStart">6dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="Widget.UM.TextView.Message.Attachment" parent="Widget.UM.TextView.Message.Text">
        <item name="android:textAppearance">?attr/textAppearanceBodySmall</item>
        <item name="android:textColor">?attr/colorSecondary</item>
    </style>

    <style name="Widget.UM.TextView.Message.Time" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">?attr/colorSecondary</item>
        <item name="android:textAppearance">?attr/textAppearanceBodySmall</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:layout_marginHorizontal">4dp</item>
    </style>

    <style name="Widget.UM.TextView.Message.Date" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">?attr/colorOnBackground</item>
        <item name="android:textAppearance">?attr/textAppearanceBodyMedium</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginVertical">2dp</item>
    </style>

    <!-- Message ImageViews. -->
    <style name="Widget.UM.ImageView.Message.Author" parent="">
        <item name="android:layout_width">35dp</item>
        <item name="android:layout_height">35dp</item>
        <item name="shapeAppearanceOverlay">@style/CircleImageView</item>
    </style>

    <style name="Widget.UM.ImageView.Message.Photo" parent="">
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:maxWidth">235dp</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:src">@drawable/ic_image</item>
        <item name="shapeAppearanceOverlay">@style/CornerImageViewPercent</item>
    </style>

    <style name="Widget.UM.ImageView.Message.Sticker" parent="">
        <item name="android:layout_marginStart">5dp</item>
        <item name="android:layout_width">140dp</item>
        <item name="android:layout_height">140dp</item>
    </style>

    <!-- Conversation TextViews. -->
    <style name="Widget.UM.TextView.Conversation" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="Widget.UM.TextView.Conversation.Name" parent="Widget.UM.TextView.Conversation">
        <item name="android:textAppearance">?attr/textAppearanceTitleMedium</item>
    </style>

    <style name="Widget.UM.TextView.Conversation.Extra" parent="Widget.UM.TextView.Conversation">
        <item name="android:textAppearance">?attr/textAppearanceTitleSmall</item>
        <item name="android:textColor">?attr/colorSecondary</item>
    </style>

    <!-- Bottom sheets. -->
    <style name="Widget.UM.BottomSheetDialog" parent="Theme.Material3.DayNight.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/Widget.UM.BottomSheet</item>
    </style>

    <style name="Widget.UM.BottomSheet" parent="Widget.Material3.BottomSheet">
        <item name="background">@style/ShapeAppearance.UM.Corner.Large</item>
    </style>

    <style name="ShapeAppearance.UM.Corner.Large" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">50dp</item>
        <item name="cornerSizeTopLeft">50dp</item>
        <item name="cornerSizeBottomRight">50dp</item>
        <item name="cornerSizeBottomLeft">50dp</item>
    </style>

    <!-- Bottom sheets buttons. -->
    <style name="Widget.UM.Button.BottomSheet" parent="Widget.Material3.Button.ElevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">left|center</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textAppearance">?attr/textAppearanceBodyMedium</item>
    </style>

    <style name="Widget.UM.Button.BottomSheet.Red" parent="Widget.UM.Button.BottomSheet">
        <item name="android:textColor">?attr/colorError</item>
        <item name="iconTint">?attr/colorError</item>
        <item name="backgroundTint">?attr/colorErrorContainer</item>
    </style>

    <!-- Login screen editTexts. -->
    <style name="Widget.UM.EditText.Login" parent="">
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:background">@drawable/rounded_edittext</item>
        <item name="android:textAppearance">?attr/textAppearanceBodyLarge</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- Login screen buttons. -->
    <style name="Widget.UM.Button.Login" parent="Widget.Material3.Button.Icon">
        <item name="android:layout_width">130dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:textAppearance">?attr/textAppearanceBodyMedium</item>
    </style>

    <!-- Bottom sheet. -->
    <style name="ThemeOverlay.UM.BottomSheetDialog" parent="Theme.Material3.DayNight.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/Widget.UM.BottomSheet.Modal</item>
    </style>
    <style name="Widget.UM.BottomSheet.Modal" parent="Widget.Material3.BottomSheet.Modal">
        <item name="backgroundTint">?attr/colorSurface</item>
    </style>

    <!-- Shape appearance. -->
    <style name="ShapeAppearance.UM.LargeComponent" parent="ShapeAppearance.Material3.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">24dp</item>
    </style>
</resources>